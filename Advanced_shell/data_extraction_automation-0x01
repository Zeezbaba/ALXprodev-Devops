#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
    echo "data.json not found."
exit 1
fi

# Extracts fields using jq
name=$(jq -r ".name" data.json | sed 's/.*/\u&/') # capitalize the first letter
height=$(jq ".height" data.json | awk '{printf "%.1f", $1 / 10}') # convert dm to m
weight=$(jq '.weight' data.json | awk '{print $1 / 10}') # Convert hectograms to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Print formatted output
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."