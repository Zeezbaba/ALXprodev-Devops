#!/bin/bash

# Create the output directory if it doesn't exist
mkdir -p pokemon_data

# Clear previous error log
> errors.txt

# Define the list of Pokémon
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Function to fetch a single Pokémon with timeout and kill support
fetch_pokemon() {
  local pokemon=$1
  local attempts=0
  local max_attempts=3
  local timeout=10

  echo "Fetching data for $pokemon..."

  while [ $attempts -lt $max_attempts ]; do
    ((attempts++))

    # Start curl in background and get its PID
    curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "pokemon_data/${pokemon}.json" &
    pid=$!

    # Wait up to $timeout seconds
    SECONDS=0
    while kill -0 "$pid" 2>/dev/null; do
      if [ $SECONDS -ge $timeout ]; then
        echo "Request timed out for $pokemon. Killing process $pid."
        kill -9 "$pid" 2>/dev/null
        break
      fi
      sleep 1
    done

    # Check if file was successfully saved
    if [ -s "pokemon_data/${pokemon}.json" ]; then
      echo "Saved data to pokemon_data/${pokemon}.json ✅"
      return 0
    else
      echo "Attempt $attempts failed for $pokemon. Retrying..."
      sleep 2
    fi
  done

  echo "[$(date)] Failed to fetch data for $pokemon after $max_attempts attempts ❌" >> errors.txt
}

export -f fetch_pokemon

# Fetch each Pokémon in parallel
for pokemon in "${pokemon_list[@]}"; do
  bash -c "fetch_pokemon $pokemon" &
done

# Wait for all background fetches to complete
wait

echo "✅ All fetch tasks completed."